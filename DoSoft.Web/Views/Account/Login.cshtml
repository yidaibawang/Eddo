
@using Eddo.Extensions
@using Eddo.Web.Mvc.Extensions
@model DoSoft.Web.Models.Account.LoginFormViewModel
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Login.js")

}
<h3 class="form-title">登录</h3>
<div class="alert alert-danger display-hide">
    <button class="close" data-close="alert"></button>
    <span>
        <i class="fa fa-warning"></i>PleaseEnterLoginInformation
    </span>
</div>
@if (!Model.SuccessMessage.IsNullOrEmpty())
{
    <div class="alert alert-success">
        <button class="close" data-close="alert"></button>
        <span>
            @Model.SuccessMessage
        </span>
    </div>
}
<form class="login-form" action="@Url.Action("Login")?returnUrl=@ViewBag.ReturnUrl" method="post">
    <input type="hidden" name="returnUrlHash" />
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">用户名</label>
        <input class="form-control form-control-solid placeholder-no-fix input-ltr" type="text" autocomplete="off" placeholder="用户名" name="usernameOrEmailAddress" value="@(Model.UserNameOrEmailAddress ?? "")" required />
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">密码</label>
        <input class="form-control form-control-solid placeholder-no-fix input-ltr" type="password" autocomplete="off" placeholder="密码" name="password" />
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-success uppercase">登录</button>
        <label class="rememberme check">
            <input type="checkbox" name="rememberMe" value="true" />记住
        </label>
        <a href="@Url.Action("ForgotPassword", "Account")" id="forget-password" class="forget-password">重设密码</a>
    </div>
</form>

<div class="create-account">
    <p>
        @if (Model.IsSelfRegistrationEnabled)
        {
            <a href="@Url.Action("Register", "Account")" id="register-btn" class="uppercase">注册</a>
            <span class="pipe-divider"> | </span>
        }
        <a href="@Url.Action("EmailActivation", "Account")" id="email-activation-btn" class="uppercase">邮箱验证</a>
    </p>
</div>